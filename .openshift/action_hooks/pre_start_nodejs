#!/bin/bash

#
# Set the apps required environment vars to OpenShift values
#

# Node
export NODE_ENV=production
export NODE_IP=$OPENSHIFT_NODEJS_IP
export NODE_PORT=OPENSHIFT_NODEJS_PORT

# PostgreSQL
export POSTGRESQL_IP=$OPENSHIFT_POSTGRESQL_DB_HOST
export POSTGRESQL_PORT=$OPENSHIFT_POSTGRESQL_DB_PORT
export POSTGRESQL_USERNAME=$OPENSHIFT_POSTGRESQL_DB_USERNAME
export POSTGRESQL_PASSWORD=$OPENSHIFT_POSTGRESQL_DB_PASSWORD
export POSTGRESQL_DATABASE=$PGDATABASE
