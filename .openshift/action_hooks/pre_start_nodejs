#!/bin/bash

#
# Set the apps required environment vars to OpenShift values
#

cd $OPENSHIFT_HOMEDIR/.env/user_vars

# Node
echo "production"           > NODE_ENV
echo $OPENSHIFT_NODEJS_IP   > NODE_IP
echo $OPENSHIFT_NODEJS_PORT > NODE_PORT

# PostgreSQL
echo $OPENSHIFT_POSTGRESQL_DB_HOST     > POSTGRESQL_IP
echo $OPENSHIFT_POSTGRESQL_DB_PORT     > POSTGRESQL_PORT
echo $OPENSHIFT_POSTGRESQL_DB_USERNAME > POSTGRESQL_USERNAME
echo $OPENSHIFT_POSTGRESQL_DB_PASSWORD > POSTGRESQL_PASSWORD
echo $PGDATABASE                       > POSTGRESQL_DATABASE
